<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_marginStart">@dimen/_50sdp</item>
        <item name="android:layout_marginEnd">@dimen/_50sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
